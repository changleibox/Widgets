<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="numberPickerStyle">@style/AppTheme.NumberPicker</item>
        <item name="datePickerStyle">@style/AppTheme.DatePicker</item>
        <item name="timePickerStyle">@style/AppTheme.TimePicker</item>
        <item name="pickerViewStyle">@style/AppTheme.PickerView</item>
    </style>

    <style name="TextAppearance.Material.NumberPicker" parent="TextAppearance.Large.Inverse.NumberPickerInputText">
        <item name="android:textColor">#222</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Material.PickerView" parent="TextAppearance.Large.Inverse.PickerViewInputText">
        <item name="android:textColor">#222</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Widget.Material.NumberPicker">
        <item name="selectionDivider">@drawable/selection_numberpicker_divider</item>
        <item name="selectionDividerHeight">1dp</item>
        <item name="wheelItemCount">5</item>
        <item name="internalMaxHeight">180dp</item>
        <item name="selectionDividersDistance">30dp</item>
        <item name="internalMinWidth">70dp</item>
        <item name="wheelItemOffset">0.12</item>
    </style>

    <style name="AppTheme.DatePicker" parent="Widget.Material.DatePicker">
        <item name="legacyLayout">@layout/layout_date_picker_legacy_holo</item>
    </style>

    <style name="AppTheme.TimePicker" parent="Widget.Material.TimePicker">
        <item name="legacyLayout">@layout/layout_time_picker_legacy_holo</item>
    </style>

    <style name="AppTheme.PickerView" parent="Widget.Material.PickerView">
        <item name="selectionDivider">@drawable/selection_numberpicker_divider</item>
        <item name="selectionDividerHeight">1dp</item>
        <item name="wheelItemCount">5</item>
        <item name="internalMaxHeight">180dp</item>
        <item name="selectionDividersDistance">30dp</item>
        <item name="internalMinWidth">70dp</item>
        <item name="wheelItemOffset">0.12</item>
    </style>

</resources>
